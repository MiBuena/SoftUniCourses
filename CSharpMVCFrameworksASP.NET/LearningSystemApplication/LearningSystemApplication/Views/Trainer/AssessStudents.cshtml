@model LearningSystem.Models.ViewModels.AssessStudentsViewModel

@{
    ViewBag.Title = "StudentsInCourseViewModel";
}

<h2>StudentsInCourseViewModel</h2>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.CourseId)

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grades.FirstOrDefault().Name)
            </th>

            <th>

                @Html.DisplayNameFor(model => model.Grades.FirstOrDefault().Grade)

            </th>

        </tr>

                @for (int i = 0; i < Model.Grades.Count(); ++i)
                {
                    @Html.HiddenFor(m => m.Grades[i].StudentId)

                    <tr>
                        <td>
                            @Html.DisplayFor(m => m.Grades[i].Name)
                        </td>

                        <td>
                            @Html.EnumDropDownListFor(m => m.Grades[i].Grade, "Select Grade",
                                     new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.Grades[i].Grade, "", new { @class = "text-danger" })




                        </td>

                    </tr>

                        }



</table>

    <div class="form-group">
        <input type="submit">
    </div>
}

